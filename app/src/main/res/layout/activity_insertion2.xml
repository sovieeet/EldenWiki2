<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InsertionActivity2">
    <!--- android:padding="16dp" -->

     <ImageView
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:src="@drawable/alexander"
         android:orientation="vertical"
         android:scaleType="centerCrop"/>

 <LinearLayout
     android:gravity="center"
     android:orientation="vertical"
     android:background="#801C1708"
     android:layout_width="match_parent"
     android:layout_height="match_parent">


     <EditText
         android:id="@+id/etMenName"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="50dp"
         android:ems="10"
         android:inputType="textPersonName"
         android:hint="Ingresa nombre"
         android:textColor="@color/dorado"
         android:textColorHint="@color/dorado"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="parent" />

     <EditText
         android:id="@+id/etMenDesc"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="20dp"
         android:ems="10"
         android:inputType="textPersonName"
         android:hint="Ingresa descripción"
         android:textColor="@color/dorado"
         android:textColorHint="@color/dorado"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/etMenName" />

     <EditText
         android:id="@+id/etMenPlace"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="20dp"
         android:ems="10"
         android:inputType="textPersonName"
         android:hint="Ingresa lugar de ubicación"
         android:textColor="@color/dorado"
         android:textColorHint="@color/dorado"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/etMenDesc" />

     <Button
         android:id="@+id/btnSave2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="32dp"
         android:backgroundTint="@color/dorado"
         android:text="Guardar Hombre"
         android:textColor="@color/azul2"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/etMenPlace" />

 </LinearLayout>


 </androidx.constraintlayout.widget.ConstraintLayout>