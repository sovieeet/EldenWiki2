<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <EditText
        android:id="@+id/etWomName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Nombre mujer"
        android:textColor="@color/dorado"
        android:textColorHint="@color/dorado"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etWomDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Descripción mujer"
        android:textColor="@color/dorado"
        android:textColorHint="@color/dorado"/>

    <EditText
        android:id="@+id/etWomPlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Lugar de ubicación mujer"
        android:textColor="@color/dorado"
        android:textColorHint="@color/dorado"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnUpdateData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Actualizar datos"
        android:textColor="@color/dorado"/>


</LinearLayout>